<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="position"
            android:id="@+id/st_position"

            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            style="@style/TextAppearance.AppCompat.Widget.ActionMode.Title"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/text_margin"
            android:maxLines="2"
            android:ellipsize="end"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Company sdcrbjvf bveuwhrb vfuybvwekhr vouyberu er ueruye rqueyr"
            android:id="@+id/st_company"
            android:layout_below="@+id/st_position"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:lines="1"
            android:singleLine="true"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_marginLeft="@dimen/companyNameMarginLeft"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Date"
            android:id="@+id/st_Date"
            android:layout_below="@+id/st_company"
            android:layout_alignParentLeft="true"
            android:singleLine="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="@dimen/companyNameMarginLeft"
            style="@style/TextAppearance.AppCompat.Caption"
            android:gravity="right"
            />


    </RelativeLayout>
</android.support.v7.widget.CardView>