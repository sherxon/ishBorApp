<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="4dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="position"
            android:id="@+id/st_position"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            style="@style/TextAppearance.AppCompat.Widget.ActionMode.Title"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/text_margin"
            android:maxLines="2"
            android:ellipsize="end"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnDelete"
            android:src="@android:drawable/star_off"
            android:layout_above="@+id/st_Date"
            android:background="@null"
            android:tag="off"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
             />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSave"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:layout_above="@+id/st_Date"
            android:background="@null"
            android:tag="on"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
             />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Company sdcrbjvf bveuwhrb vfuybvwekhr vouyberu er ueruye rqueyr"
            android:id="@+id/st_company"
            android:layout_below="@+id/st_position"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:lines="1"
            android:singleLine="true"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_marginLeft="@dimen/companyNameMarginLeft"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Date"
            android:id="@+id/st_Date"
            android:layout_below="@+id/st_company"
            android:layout_alignParentLeft="true"
            android:singleLine="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="@dimen/companyNameMarginLeft"
            style="@style/TextAppearance.AppCompat.Caption"
            android:gravity="right"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/st_Date"
            android:background="@color/colorPrimary"
            android:id="@+id/view" />

    </RelativeLayout>
</android.support.v7.widget.CardView>